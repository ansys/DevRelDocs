{
  "$schema": "https://raw.githubusercontent.com/dotnet/docfx/main/schemas/docfx.schema.json",
  "build": {
    "content": [
      {
        "files": [
          "**/*.{md,yml}"
        ],
        "exclude": [
          "_site/**"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**",
          "coverpage.html",
          "header.html",
          "footer.html"//,
          //"templates/**"
        ]
      }
    ],
    "output": "_site",
    "template": [
      "default",
      "modern"//,
      //"templates/custom"
    ],
    "globalMetadata": {
      "_appName": "markdown-to-pdf",
      "_appTitle": "ModelCenter API Documentation",
      "_appVersion": "1.0.0",
      "_enableSearch": true,
      "pdf": true,
      "pdfTocPage": true,
      "pdfCoverPage": "coverpage.html",
      "pdfFileName": "markdown-to-pdf-documentation.pdf",
      "_pdfCover": "coverpage.html",
      "pdfHeaderTemplate": "header.html",
      "pdfFooterTemplate": "footer.html"
    }
  }
}